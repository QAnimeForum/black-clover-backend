{
  "name": "black-clover-backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "typeorm": "ts-node ./node_modules/typeorm/cli",
    "migration:run": "npm run typeorm migration:run  -- -d ./src/data-source.ts",
    "migration:generate": "npm run typeorm  -- -d ./src/data-source.ts migration:generate ./src/migrations/$npm_config_name",
    "migration:create": "npm run typeorm -- migration:create ./src/migrations/$npm_config_name",
    "migration:revert": "npm run typeorm -- -d ./src/data-source.ts migration:revert",
    "clean": "rimraf dist",
    "build": "nest build",
    "format": "yarn format:src && yarn format:test",
    "format:src": "prettier --write src/**/*.ts",
    "format:test": "prettier --write test/**/*.ts",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "lint": "yarn lint:src && yarn lint:test",
    "lint:fix": "eslint --ext .ts,.tsx '{src,test}/**/*.ts' --fix --no-error-on-unmatched-pattern",
    "lint:src": "eslint --ext .ts,.tsx 'src/**/*.ts' --no-error-on-unmatched-pattern",
    "lint:test": "eslint --ext .ts,.tsx 'test/**/*.ts' --no-error-on-unmatched-pattern",
    "test": "TZ=UTC jest --config test/jest.json --runInBand --passWithNoTests --forceExit",
    "prepare": "husky install",
    "deadcode": "ts-prune --project tsconfig.json --unusedInModule --skip *.json",
    "deadcode:filter": "ts-prune --project tsconfig.json --unusedInModule --skip *.json | grep -v '(used in module)'",
    "deadcode:count": "ts-prune --project tsconfig.json --unusedInModule --skip *.json | grep -v '(used in module)' | wc -l",
    "spell": "yarn spell:src && yarn spell:test",
    "spell:src": "cspell lint --config cspell.json src/**/*.ts --color --gitignore --no-must-find-files --no-summary --no-progress || true",
    "spell:test": "cspell lint --config cspell.json test/**/*.ts --color --gitignore --no-must-find-files --no-summary --no-progress || true",
    "rollback": "yarn rollback:map",
    "db:create": "ts-node ./node_modules/typeorm-extension/bin/cli.cjs db:create",
    "db:drop": "ts-node ./node_modules/typeorm-extension/bin/cli.cjs db:drop",
    "seed:run": "ts-node ./node_modules/typeorm-extension/bin/cli.cjs seed:run",
    "seed:create": "ts-node ./node_modules/typeorm-extension/bin/cli.cjs seed:create"
  },
  "dependencies": {
    "@casl/ability": "^6.7.1",
    "@nestjs/common": "^10.3.5",
    "@nestjs/config": "^3.2.0",
    "@nestjs/core": "^10.3.5",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/sequelize": "^10.0.1",
    "@nestjs/swagger": "^7.3.0",
    "@nestjs/typeorm": "^10.0.2",
    "@ntegral/nestjs-sentry": "^4.0.1",
    "@telegraf/session": "^2.0.0-beta.7",
    "bcryptjs": "^2.4.3",
    "crypto-js": "^4.2.0",
    "helmet": "^7.1.0",
    "joi": "^17.12.2",
    "kysely": "^0.27.2",
    "moment-timezone": "^0.5.45",
    "nestjs-command": "^3.1.4",
    "nestjs-i18n": "^10.4.5",
    "nestjs-i18n-telegraf": "^10.3.0",
    "nestjs-paginate": "^8.6.2",
    "nestjs-telegraf": "^2.7.0",
    "pg": "^8.11.3",
    "rxjs": "^7.8.1",
    "telegraf": "^4.16.3",
    "typeorm": "^0.3.20",
    "typeorm-extension": "^3.5.0",
    "ua-parser-js": "^1.0.37"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@nestjs/throttler": "^5.1.2",
    "@sentry/node": "^7.107.0",
    "@types/crypto-js": "^4.2.2",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/lodash": "^4.17.0",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.3.1",
    "@types/response-time": "^2.3.8",
    "@types/sequelize": "^4.28.20",
    "@types/supertest": "^6.0.0",
    "@types/ua-parser-js": "^0.7.39",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dotenv": "^16.4.5",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^9.0.11",
    "jest": "^29.5.0",
    "nest-winston": "^1.9.4",
    "prettier": "^3.2.5",
    "randexp": "^0.5.3",
    "response-time": "^2.3.2",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
